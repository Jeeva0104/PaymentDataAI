# =====================================================
# Payment System Environment Configuration
# =====================================================

# Database Configuration
MYSQL_ROOT_PASSWORD=root_2024!
MYSQL_DATABASE=payment_system
MYSQL_USER=payment_user
MYSQL_PASSWORD=secure_2024!

# MySQL Connection Settings
MYSQL_PORT=3306
MYSQL_HOST=mysql

# Container Configuration
CONTAINER_NAME=payment_mysql
MYSQL_DATA_VOLUME=payment_mysql_data

# MySQL Configuration
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# Development Settings
MYSQL_LOG_LEVEL=warn
MYSQL_SLOW_QUERY_LOG=1
MYSQL_MAX_CONNECTIONS=100

# Timezone
TZ=Asia/Calcutta

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# WebSocket Configuration
WEBSOCKET_CORS_ORIGINS=*
WEBSOCKET_ASYNC_MODE=eventlet
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# AI Configuration
AI_API_KEY=your_ai_api_api_key
AI_MODEL=gemini-2.5-flash
AI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/